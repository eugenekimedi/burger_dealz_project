<h1>Restaurants</h1>

<div>
  <% @restaurants.each do |restaurant| %>
  <div>
    <p><%= restaurant.name %></p>
    <p>Address: <%= restaurant.address %></p>
    <p>Burgers: <% restaurant.burgers.each do |burger|%>
       <ul>
         <li><%=burger.name %></li>
       </ul>       
      <% end %>
    </p>
  </div>
<hr>
  <% end %>
</div>
<a href="/restaurants/new">Add A New Restaurant!</a>